
    <section>
        <div class="container">
        <div class="row mt-4">
            {{#each products}}
            <div class="col-md-3 p-3">
                <div class="card" style="width: 15rem; height:30rem">
                    <img class="card-img-top"
                        src="/product-images/{{this._id}}.jpg"
                        alt="Card image cap" style="height:11rem">
                    <div class="card-body">
                        <h4 class="card-title">{{this.Brand}}</h4>
                        <h5 class="card-title">{{this.Model}}</h5>
                         <p class="card text">Price: â‚¹{{this.Price}}/-</p>
                        <p class="card-text" >{{this.Description}}</p>
                        <div >
                            <button onclick="addToCart('{{this._id}}')"class="btn btn-primary " >Add to Cart</button>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
        
    </section>
