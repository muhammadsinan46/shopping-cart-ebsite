<div class="row">
    <div class="col-md-6 m-auto" >
    <div class="container mt-5 pl-5">
        <h2 class="text-center ">Login</h2>
        <form action="/admin/admin" method="post">
            {{#if loginErr}}
            <p class="error">{{loginErr}}</p>
            {{/if}}
            <!-- Email input -->
            <div class="form-group " >
                <label>Email address</label>
                <input type="email" name="Email" class="form-control" />
                
            </div>

            <!-- Password input -->
            <div class="form-group">
                <label>Password</label>
                <input type="password" name="Password" class="form-control" />
                
            </div>

            <!-- Submit button -->
            <button type="submit" class="btn btn-primary float-right">log in</button>

            <!-- Register buttons -->
            <div class="text-center">
                <p>Not a member? <a href="/admin/adsignup">Create new account</a></p>
            </div>
        </form>
    </div>
</div>
</div>