<section>
    <div class="container">
        <div class="row mt-4">
            <a href="/admin/add-product" class="btn btn-success ml-auto ">Add product</a>
        </div>
        <br>
        <table class="table mt-5" id="productsTable">
  <thead>
    <tr>
      
      <th scope="col">Brand</th>
      <th scope="col">Model</th>
      <th scope="col">Category</th>
      <th scope="col">Price(â‚¹)</th>
      <th scope="col">Description</th>
      <th>Image</th>
      <th>Options</th>
    </tr>
  </thead>


  <tbody>
    {{#each products}}
    <tr>
      
      <td>{{this.Brand}}</td>
      <td>{{this.Model}}</td>
      <td>{{this.Category}}</td>
      <td>{{this.Price}}</td>
      <td>{{this.Description}}</td>
      <td><img style="width: 70px;height:50px" src="/product-images/{{this._id}}.jpg"  alt=""></td>
      <td>
        <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
         <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" 
         onclick="return confirm('Are you want to delete{{this.Name}}?')">Delete</a>
      </td>
      
    </tr>
    {{/each}}
  </tbody>
</table>

    </div>
</section>
<script>
  $(document).ready( function () {
    $('#productsTable').DataTable();
} );
</script>