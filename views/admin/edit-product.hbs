<section>
    <div class="container mt-5">
        <div class="row ">

            <div class="col-mid-6">
                <h2 class="text-center">Edit products</h2>
                <form action="/admin/edit-product/{{product._id}}" method="post" enctype="multipart/form-data">
                    <label for="">Brand</label>
                    <input type="text" class="form-control" name="Name" value="{{product.Brand}}">
                    
                    <label for="">Model</label>
                    <input type="text" class="form-control" name="Name" value="{{product.Model}}">

                    <label for="">Category</label>
                    <input type="text" class="form-control" name="Category" value="{{product.Category}}">

                    <label for="">Description</label>
                    <input type="text" class="form-control" name="Description" value="{{product.Description}}">


                    <label for="">Price</label>
                    <input type="text" class="form-control" name="Price" value="{{product.Price}}">

                    <label for="">Image</label>
                    <img src="/product-images/{{product._id}}.jpg" alt="" style="width:100px ;height:auto" id="imageView"class="pt-3">
                    <input type="file"  class="form-control" name="Image" onchange="viewImage(event)">

                    <button type="submit" class="btn btn-success ml-4" >Submit</button>
                </form>
            </div>
        </div>
    </div>
</section>
<script>
    function viewImage(event){
        document.getElementById('imageView').src=URL.createObjectURL(event.target.files[0])
    }
</script>